            <input class="px-3 py-2 rouned-md outline-none bg-transparent border-2 border-zinc-800"type="password" name="password" id="" placeholder="password">
            <input class="px-5 py-2 rounded-md bg-blue-500 " type="submit" value="Create Account">
        </form>
